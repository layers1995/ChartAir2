<%= render 'layouts/header' %>
<%= stylesheet_link_tag 'main'%>

<h1><%= @user.name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3" id="loginBox">
    <%= form_for(@user_airplane) do |f| %>
      
      <div id="loginGroup">
        
        <%= render 'layouts/error_messages' %>
    
        <p class="loginInfo"><%= f.text_field :name, class: 'form-control', id: "input", :placeholder=>"Plane Name" %></p>

        <%= f.submit "Add Plane", class: "btn btn-primary" %>
      
      </div>
      
    <% end %>
  </div>
  
</div>
