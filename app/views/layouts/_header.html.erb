<header>
	<%= image_tag "header_logo", id: "logo"%>
	<div id="navBar">
		<ul id="headerNavItems">
				<li class="item"><%= link_to "Plan Trip", plantrip_path %></li>
				<li class="item"><%= link_to "About Us", about_us_path %></li>
				<% if logged_in? %>
					<li class="item"><%= link_to "Feedback", feedback_path %></li>
				<% end %>
				<li class="item"><%= link_to "Help", help_path %></li>
				
				<% if logged_in? %>
		          <li class="dropdown">
		            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
		              Account <b class="caret"></b>
		            </a>
		            <ul class="dropdown-menu">
		              <li class="item"><%= link_to "Profile", profile_path %></li>
		              <li class="item"><%= link_to "Trips", trips_path %></li>
		              <li class="divider"></li>
		              <li class="item">
		                <%= link_to "Log out", logout_path, method: :delete %>
		              </li>
		            </ul>
		          </li>
		        <% else %>
		          <li><%= link_to "Log in", login_path %></li>
		        <% end %>
		</ul>
	</div>
</header>