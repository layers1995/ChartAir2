<%= render 'layouts/header' %>
<%= stylesheet_link_tag 'main'%>

<h1>All Trips</h1>

<table id="trips">
    <tr>
        <td><h3>Trip Status</h3></td>
        <td><h3>Destination</h3></td>
        <td><h3>Time and Date</h3></td>
        <td><h3>Airplane</h3></td>
        <td><h3>Cost</h3></td>
        <td><h3></h3></td>
    </tr>
    <% @trips.each do |trip|%>
        <tr>
          <td><h3><%=trip["trip_status"]%></h3></td>
          <td><h3><%=Airport.find_by(:id => trip["airport_id"]).name%></h3></td>
          <td><h3><%=trip["arrival_time"]%></h3></td>
          <td><h3><%=trip["tailnumber"]%></h3></td>
          <td><h3>$<%=trip["cost"]%></h3></td>
          
          <%if trip["trip_status"]==="completed"%>
              <td><%= link_to "Rate Trip", report_path(:trip_id => trip["id"]) %></td>
          <%end%>
          
          <%if trip["trip_status"]==="issue"%>
              <td><%= link_to "Resolve Issue", trip_resolution_path(:trip => trip["id"], :reason => "issue") %></td>
          <%end%>
          
          <%if trip["trip_status"]==="canceled"%>
              <td><%= link_to "Resolve Cancleation", trip_resolution_path(:trip => trip["id"], :reason => "cancled") %></td>
          <%end%>
          
        </tr>
    <%end%>
</table>
