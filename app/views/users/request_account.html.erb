<%= stylesheet_link_tag 'sessions' %>


<h1 id="userRequestTitle">Currently, ChartAir.us is piloting its program. If you wish to join the pilot, input your here email and we will send you a key to make your account!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3" id="newUserBox">

    <%= form_for(@request) do |f| %>
      
      <div id="loginGroup">
        
        <h1>Register Here</h1>
        
        <% unless flash.empty? %>
          <div id="notice">
              <% flash.each do |key, value| %>
                  <div class="flash <%= key %>">
                  <%= value %>
                  </br>
                  </div>
              <% end %>
          </div>
        <% end %> 

        <p class="loginInfo"><%= f.email_field :email, class: 'form-control', id: "input", :placeholder=>"Email" %></p>
        
        <p class="loginInfo"><%= f.email_field :email_confirm, class: 'form-control', id: "input", :placeholder=>"Email Confirmation" %></p>

        <%= f.submit "Request Account", class: "btn btn-primary" %>
      
      </div>
      
    <% end %>
  </div>
  
</div>

<div id="footContainer">
    <footer>
    	<p>&copy; 2017 ChartAir, Inc &emsp; <a href="http://sed-rah-stock.deviantart.com/">sed-rah-stock</a> <p>
    </footer>
</div>
