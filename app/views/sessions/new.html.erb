<%= stylesheet_link_tag 'sessions'%>

<div class="row">
    
  <div class="col-md-6 col-md-offset-3" id="loginBox">
    <%= image_tag "logoBright4", class: "logo"%>  
    <%= form_for(:session, url: login_path) do |f| %>
    
      <div id="loginGroup">
        
         <% unless flash.empty? %>
          <div id="notice">
            <% flash.each do |key, value| %>
              <div class="flash <%= key %>">
                <%= value %>
              </div>
            <% end %>
          </div>
        <% end %>
        
        <p class="loginInfo"><%= f.text_field :name, id: "input", :placeholder=>"Username"%></p>
        <p class="loginInfo"><%= f.password_field :password, id: "input", :placeholder=>"Password"%></p>
  
        <%= f.submit "Log in", class: "loginInfo" %>
        
      </div>
      
    <% end %>
    
  </div>
  
  <div id="belowBox">
		<p><%= link_to "Not a member? Click here to join!", new_user_path %></p>
	</div>
		
  
</div>

<div id="footContainer">
    <footer>
    	<p>&copy; 2017 ChartAir, Inc &emsp; <a href="http://sed-rah-stock.deviantart.com/">sed-rah-stock</a> <p>
    </footer>
</div>
